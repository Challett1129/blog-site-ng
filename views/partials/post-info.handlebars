<article>
    <div class="container">
        <div class="row post">
            <div class="col-12 post-header">
                <div>
                     <a class="naked-link title"href="/post/{{id}}">{{title}}</a>
                </div>
                <div class="username">
                    Posted by {{user.username}} on {{format_date createdAt}}
                </div>
            </div>
            <div class="col-12 body">
                {{text_body}}
            </div>
        </div>     
    </div>     
</article>